					<script>dump(_event);</script>
				</finalize>
				
				<content>
					<vxml:vxml version="2.1" xml:lang="en" 
						xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						xsi:schematicLocation="http://www.w3.org/2001/vxml http://www.w3.org/TR/voicexml20/vxml.xsd">
