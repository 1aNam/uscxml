<scxml xmlns="http://www.w3.org/2005/07/scxml" 
	     xmlns:vxml="http://www.w3.org/2001/vxml" 
	     datamodel="ecmascript">
	<script src="http://uscxml.tk.informatik.tu-darmstadt.de/scripts/dump.js" />
	
	<state id="start">
